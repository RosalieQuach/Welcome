
<div class="cards">
  <% @posts.each do |post| %>
    <div class="card-product">
      <i class="fa <%= post.category.icon %>"></i>
        <div class="card-product-infos">
          <h2><%= post.title %></h2>
          <div class= "post-description">
            <p><%= post.description %></p>

          </div>
          <p><%= link_to "more", post_path(post) %></p>
          <p>Location: <%= User.find(post.user_id).location %></p>
          <p><%= User.find(post.user_id).email %></p>
          <p>Posted <%= distance_of_time_in_words(Time.now, post.created_at, only: [:days])%> ago</p>

        </div>
    </div>
  <% end %>

</div>

<div style="width: 100%; height: 600px;"
  data-controller="mapbox"
  data-mapbox-markers-value="<%= @markers.to_json %>"
  data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
</div>
